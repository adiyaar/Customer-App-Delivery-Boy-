<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/intro_bg_img"
        android:scaleType="centerCrop" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/slide_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/slide_3"
            android:layout_centerHorizontal="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/slide_cover">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_grid_staggered"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slide_3_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColorSecondaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slide_3_desc"
                android:padding="10dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimaryDark" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
