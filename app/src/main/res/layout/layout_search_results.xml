<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/search_result_cover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/search_result_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_down"
        android:tint="@color/textColorSecondaryLight"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/search_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="15sp"
        android:textColor="@color/textColorSecondary"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/search_result_cover"
        android:layout_toStartOf="@+id/search_result_arrow"
        android:layout_marginStart="5dp" />

</RelativeLayout>

